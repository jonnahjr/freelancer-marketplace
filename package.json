{
  "name": "freelancer-marketplace",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "prepare": "husky install",
    "build": "npm run -w apps/frontend build && npm run -w apps/backend build",
    "lint": "npm run -w apps/frontend lint && npm run -w apps/backend lint",
    "format": "npm run -w apps/frontend format && npm run -w apps/backend format",
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "npm --workspace=apps/frontend run dev",
    "dev:backend": "npm --workspace=apps/backend run start:dev"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,json,md}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "typescript": "5.3.3"
  }
  ,
  "overrides": {
    "typescript": "5.3.3"
  }
}
